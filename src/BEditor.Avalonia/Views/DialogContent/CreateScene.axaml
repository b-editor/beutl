<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:props="using:BEditor.Properties"
    xmlns:titlebar="using:BEditor.Views.CustomTitlebars"
    xmlns:dialogvm="using:BEditor.ViewModels.DialogContent"
    mc:Ignorable="d"  Width="1000" Height="595"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="-1"
    TransparencyLevelHint="AcrylicBlur"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    x:Class="BEditor.Views.DialogContent.CreateScene"
    x:DataType="dialogvm:CreateSceneViewModel"
    Title="CreateScene">
    <ExperimentalAcrylicBorder>
        <ExperimentalAcrylicBorder.Material>
            <ExperimentalAcrylicMaterial
                TintColor="#222222"
                TintOpacity="{StaticResource AcrylicTintOpacity1}"
                MaterialOpacity="{StaticResource AcrylicMaterialOpacity1}" />
        </ExperimentalAcrylicBorder.Material>
        <Grid RowDefinitions="Auto,*">

            <titlebar:WindowsTitlebarButtons CanResize="False"/>

            <VirtualizingStackPanel Grid.Row="1" Margin="8">
                <TextBlock
                    Margin="0,0,0,16"
                    FontSize="24"
                    Text="{x:Static props:Strings.CreateScene}" />

                <!--  Width  -->
                <VirtualizingStackPanel Margin="8">
                    <TextBlock
                        FontSize="14"
                        Text="{x:Static props:Strings.Width}" />

                    <NumericUpDown
                        HorizontalAlignment="Left"
                        MinWidth="240"
                        Margin="0,8"
                        Value="{CompiledBinding Width.Value, Mode=TwoWay}" />
                </VirtualizingStackPanel>

                <!--  Height  -->
                <VirtualizingStackPanel Margin="8">
                    <TextBlock
                        FontSize="14"
                        Text="{x:Static props:Strings.Height}" />

                    <NumericUpDown
                        HorizontalAlignment="Left"
                        MinWidth="240"
                        Margin="0,8"
                        Value="{CompiledBinding Height.Value, Mode=TwoWay}" />
                </VirtualizingStackPanel>

                <!--  Name  -->
                <VirtualizingStackPanel Margin="8,24,8,8">
                    <TextBlock
                        FontSize="14"
                        Text="{x:Static props:Strings.Name}" />

                    <TextBox
                        HorizontalAlignment="Left"
                        MinWidth="240"
                        Margin="0,8"
                        Text="{CompiledBinding Name.Value, Mode=TwoWay}" />
                </VirtualizingStackPanel>

            </VirtualizingStackPanel>

            <VirtualizingStackPanel
                Grid.Row="1"
                Margin="8"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Click="CloseClick"
                    HorizontalAlignment="Left"
                    Content="{x:Static props:Strings.Cancel}"
                    Background="Transparent"
                    Cursor="Arrow"
                    Foreground="Red"
                    IsCancel="True"/>
                <Button
                    Click="CloseClick"
                    HorizontalAlignment="Left"
                    Command="{CompiledBinding Create, Mode=OneTime}"
                    Content="{x:Static props:Strings.Create}"
                    Cursor="Arrow"
                    Background="Transparent"
                    IsDefault="True"/>
            </VirtualizingStackPanel>

        </Grid>
    </ExperimentalAcrylicBorder>
</Window>
