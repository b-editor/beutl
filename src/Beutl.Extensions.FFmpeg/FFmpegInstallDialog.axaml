<ui:ContentDialog x:Class="Beutl.Embedding.FFmpeg.FFmpegInstallDialog"
              xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:lang="using:Beutl.Language"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:ui="using:FluentAvalonia.UI.Controls"
              xmlns:local="clr-namespace:Beutl.Embedding.FFmpeg"
              xmlns:props="clr-namespace:Beutl.Extensions.FFmpeg.Properties"
              Title="{x:Static props:Strings.Install_FFmpeg}"
              d:DesignHeight="200"
              d:DesignWidth="400"
              x:CompileBindings="True"
              x:DataType="local:FFmpegInstallDialogViewModel"
              CloseButtonText="{Binding CloseButtonText.Value}"
              mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <StaticResource x:Key="ContentDialogMaxWidth" ResourceKey="ContentDialogMinWidth" />
    </ui:ContentDialog.Resources>

    <StackPanel Spacing="12">
        <TextBlock Text="{Binding InstallMethodDescription}"
                   TextWrapping="Wrap"
                   Opacity="0.8"
                   IsVisible="{Binding !IsCompleted.Value}" />

        <TextBlock Text="{Binding ProgressText.Value}"
                   FontWeight="SemiBold"
                   TextWrapping="Wrap" />

        <ProgressBar IsIndeterminate="{Binding IsIndeterminate.Value}"
                     Maximum="{Binding ProgressMax.Value}"
                     Value="{Binding ProgressValue.Value}"
                     IsVisible="{Binding !IsCompleted.Value}" />
    </StackPanel>
</ui:ContentDialog>
