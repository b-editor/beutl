<UserControl x:Class="Beutl.Editor.Components.CurvesTab.Views.CurvesTabView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:curves="using:Beutl.Controls.Curves"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lang="using:Beutl.Language"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Beutl.Editor.Components.CurvesTab.ViewModels"
             d:DesignHeight="720"
             d:DesignWidth="1080"
             x:CompileBindings="True"
             x:DataType="vm:CurvesTabViewModel"
             mc:Ignorable="d">
    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0"
              Height="32"
              ColumnDefinitions="*,Auto,Auto">
            <TextBlock Grid.Column="0"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"
                       Text="{x:Static lang:Strings.Curves}" />

            <ComboBox Grid.Column="1"
                      Margin="0,0,8,0"
                      VerticalAlignment="Center"
                      DisplayMemberBinding="{ReflectionBinding DisplayName}"
                      IsVisible="{Binding ShowCustom.Value}"
                      ItemsSource="{Binding CustomCurveChannels}"
                      SelectedValue="{Binding SelectedChannelItem.Value, Mode=TwoWay}"
                      Theme="{StaticResource LiteComboBoxStyle}" />

            <ComboBox Grid.Column="2"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      DisplayMemberBinding="{ReflectionBinding DisplayName}"
                      ItemsSource="{Binding CurveGroups}"
                      SelectedValue="{Binding SelectedGroupItem.Value, Mode=TwoWay}"
                      Theme="{StaticResource LiteComboBoxStyle}" />
        </Grid>

        <Panel Grid.Row="1"
               Margin="8,0,8,8"
               IsVisible="{Binding HasCurves.Value}">
            <curves:CurveEditor DragCompleted="CurveEditor_DragCompleted"
                                DragStarted="CurveEditor_DragStarted"
                                IsVisible="{Binding ShowMasterCurve.Value}"
                                Points="{Binding MasterCurve.Value.Points}"
                                Visualization="Master"
                                VisualizationRenderer="{Binding Renderer}" />

            <curves:CurveEditor DragCompleted="CurveEditor_DragCompleted"
                                DragStarted="CurveEditor_DragStarted"
                                IsVisible="{Binding ShowRedCurve.Value}"
                                Points="{Binding RedCurve.Value.Points}"
                                Visualization="Red"
                                VisualizationRenderer="{Binding Renderer}" />

            <curves:CurveEditor DragCompleted="CurveEditor_DragCompleted"
                                DragStarted="CurveEditor_DragStarted"
                                IsVisible="{Binding ShowGreenCurve.Value}"
                                Points="{Binding GreenCurve.Value.Points}"
                                Visualization="Green"
                                VisualizationRenderer="{Binding Renderer}" />

            <curves:CurveEditor DragCompleted="CurveEditor_DragCompleted"
                                DragStarted="CurveEditor_DragStarted"
                                IsVisible="{Binding ShowBlueCurve.Value}"
                                Points="{Binding BlueCurve.Value.Points}"
                                Visualization="Blue"
                                VisualizationRenderer="{Binding Renderer}" />

            <curves:CurveEditor DragCompleted="CurveEditor_DragCompleted"
                                DragStarted="CurveEditor_DragStarted"
                                IsVisible="{Binding ShowHueVsHue.Value}"
                                Points="{Binding HueVsHue.Value.Points}"
                                Visualization="HueVsHue"
                                VisualizationRenderer="{Binding Renderer}" />

            <curves:CurveEditor DragCompleted="CurveEditor_DragCompleted"
                                DragStarted="CurveEditor_DragStarted"
                                IsVisible="{Binding ShowHueVsSaturation.Value}"
                                Points="{Binding HueVsSaturation.Value.Points}"
                                Visualization="HueVsSaturation"
                                VisualizationRenderer="{Binding Renderer}" />

            <curves:CurveEditor DragCompleted="CurveEditor_DragCompleted"
                                DragStarted="CurveEditor_DragStarted"
                                IsVisible="{Binding ShowHueVsLuminance.Value}"
                                Points="{Binding HueVsLuminance.Value.Points}"
                                Visualization="HueVsLuminance"
                                VisualizationRenderer="{Binding Renderer}" />

            <curves:CurveEditor DragCompleted="CurveEditor_DragCompleted"
                                DragStarted="CurveEditor_DragStarted"
                                IsVisible="{Binding ShowLuminanceVsSaturation.Value}"
                                Points="{Binding LuminanceVsSaturation.Value.Points}"
                                Visualization="LuminanceVsSaturation"
                                VisualizationRenderer="{Binding Renderer}" />

            <curves:CurveEditor DragCompleted="CurveEditor_DragCompleted"
                                DragStarted="CurveEditor_DragStarted"
                                IsVisible="{Binding ShowSaturationVsSaturation.Value}"
                                Points="{Binding SaturationVsSaturation.Value.Points}"
                                Visualization="SaturationVsSaturation"
                                VisualizationRenderer="{Binding Renderer}" />
        </Panel>

        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   IsVisible="{Binding IsCurvesMissing.Value}"
                   Text="{x:Static lang:Strings.ColorCurves_Missing}"
                   TextWrapping="Wrap" />
    </Grid>
</UserControl>
