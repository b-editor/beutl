<UserControl x:Class="Beutl.Views.Editors.ScriptEditor"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Beutl.Views.Editors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Beutl.ViewModels.Editors"
             xmlns:editor="using:Beutl.Controls.PropertyEditors"
             d:DesignWidth="300"
             x:CompileBindings="True"
             x:DataType="vm:ScriptEditorViewModel"
             mc:Ignorable="d">
    <StackPanel>
        <editor:StringEditor x:Name="ScriptStringEditor"
                              Classes="multiline"
                              Text="{Binding Value.Value}"
                              Header="{Binding Header, Mode=OneTime}"
                              Description="{Binding Description, Mode=OneTime}"
                              KeyFrameCount="{Binding KeyFrameCount.Value}"
                              KeyFrameIndex="{Binding KeyFrameIndex.Value}"
                              IsReadOnly="{Binding IsReadOnly.Value}">
            <editor:StringEditor.MenuContent>
                <local:PropertyEditorMenu />
            </editor:StringEditor.MenuContent>
        </editor:StringEditor>
        <SelectableTextBlock Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                             Text="{Binding CompileError.Value}"
                             TextWrapping="WrapWithOverflow"
                             Margin="8,0,32,0"
                             IsVisible="{Binding CompileError.Value,
                                        Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
    </StackPanel>
</UserControl>
