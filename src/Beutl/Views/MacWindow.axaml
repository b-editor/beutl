<Window x:Class="Beutl.Views.MacWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:h="clr-namespace:Beutl.Helpers"
        xmlns:lang="using:Beutl.Language"
        xmlns:local="using:Beutl.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Beutl.Services.PrimitiveImpls"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:vm="using:Beutl.ViewModels"
        Title="{Binding WindowTitle.Value}"
        d:DesignHeight="720"
        d:DesignWidth="1280"
        x:CompileBindings="True"
        x:DataType="vm:MainViewModel"
        Icon="avares://Beutl.Controls/Assets/logo.png"
        mc:Ignorable="d">
    <NativeMenu.Menu>
        <NativeMenu>
            <!--  ファイル  -->
            <NativeMenuItem Header="{x:Static lang:Strings.File}">
                <NativeMenu>
                    <!--  新規作成  -->
                    <NativeMenuItem Header="{x:Static lang:Strings.CreateNew}">
                        <NativeMenu>
                            <!--  プロジェクト  -->
                            <NativeMenuItem Command="{Binding MenuBar.CreateNewProject}"
                                            Gesture="{h:GetCommandGesture CreateNewProject,
                                                                          ExtensionType={x:Type p:MainViewExtension}}"
                                            Header="{x:Static lang:Strings.CreateNewProject}" />
                            <!--  ファイル  -->
                            <NativeMenuItem Command="{Binding MenuBar.CreateNew}"
                                            Gesture="{h:GetCommandGesture CreateNewFile,
                                                                          ExtensionType={x:Type p:MainViewExtension}}"
                                            Header="{x:Static lang:Strings.CreateNewScene}" />
                        </NativeMenu>
                    </NativeMenuItem>
                    <NativeMenuItemSeparator />
                    <!--  開く  -->
                    <NativeMenuItem Header="{x:Static lang:Strings.Open}">
                        <NativeMenu>
                            <!--  プロジェクト  -->
                            <NativeMenuItem Command="{Binding MenuBar.OpenProject}"
                                            Gesture="{h:GetCommandGesture OpenProject,
                                                                          ExtensionType={x:Type p:MainViewExtension}}"
                                            Header="{x:Static lang:Strings.Project}" />
                            <!--  ファイル  -->
                            <NativeMenuItem Command="{Binding MenuBar.OpenFile}"
                                            Gesture="{h:GetCommandGesture OpenFile,
                                                                          ExtensionType={x:Type p:MainViewExtension}}"
                                            Header="{x:Static lang:Strings.File}" />
                        </NativeMenu>
                    </NativeMenuItem>
                    <NativeMenuItemSeparator />
                    <!--  閉じる  -->
                    <NativeMenuItem Command="{Binding MenuBar.CloseFile}" Header="{x:Static lang:Strings.Close}" />
                    <!--  プロジェクトを閉じる  -->
                    <NativeMenuItem Command="{Binding MenuBar.CloseProject}"
                                    Header="{x:Static lang:Strings.CloseProject}"
                                    IsEnabled="{Binding IsProjectOpened.Value}" />
                    <NativeMenuItemSeparator />
                    <!--  上書き保存  -->
                    <NativeMenuItem Command="{Binding MenuBar.Save}"
                                    Gesture="{h:GetCommandGesture Save,
                                                                  ExtensionType={x:Type p:MainViewExtension}}"
                                    Header="{x:Static lang:Strings.Save}"
                                    IsEnabled="{Binding IsProjectOpened.Value}" />
                    <!--  すべて保存  -->
                    <NativeMenuItem Command="{Binding MenuBar.SaveAll}"
                                    Gesture="{h:GetCommandGesture SaveAll,
                                                                  ExtensionType={x:Type p:MainViewExtension}}"
                                    Header="{x:Static lang:Strings.SaveAll}"
                                    IsEnabled="{Binding IsProjectOpened.Value}" />
                    <NativeMenuItemSeparator />
                    <!--  最近使ったプロジェクト  -->
                    <NativeMenuItem Header="{x:Static lang:Strings.RecentFiles}">
                        <NativeMenu />
                    </NativeMenuItem>
                    <NativeMenuItem Header="{x:Static lang:Strings.RecentProjects}">
                        <NativeMenu />
                    </NativeMenuItem>

                    <NativeMenuItemSeparator />
                    <!--  終了  -->
                    <NativeMenuItem Command="{Binding MenuBar.Exit}"
                                    Gesture="{h:GetCommandGesture Exit,
                                                                  ExtensionType={x:Type p:MainViewExtension}}"
                                    Header="{x:Static lang:Strings.Exit}" />
                </NativeMenu>
            </NativeMenuItem>
            <!--  編集  -->
            <NativeMenuItem Header="{x:Static lang:Strings.Edit}">
                <NativeMenu>
                    <!--  元に戻す  -->
                    <NativeMenuItem Command="{Binding MenuBar.Undo}"
                                    Gesture="{h:GetCommandGesture Undo,
                                                                  ExtensionType={x:Type p:MainViewExtension}}"
                                    Header="{x:Static lang:Strings.Undo}"
                                    IsEnabled="{Binding IsProjectOpened.Value}" />
                    <!--  やり直し  -->
                    <NativeMenuItem Command="{Binding MenuBar.Redo}"
                                    Gesture="{h:GetCommandGesture Redo,
                                                                  ExtensionType={x:Type p:MainViewExtension}}"
                                    Header="{x:Static lang:Strings.Redo}"
                                    IsEnabled="{Binding IsProjectOpened.Value}" />
                </NativeMenu>
            </NativeMenuItem>
            <!--  表示  -->
            <NativeMenuItem Header="{x:Static lang:Strings.View}">
                <NativeMenu>
                    <NativeMenuItem Header="{x:Static lang:Strings.Editors}">
                        <NativeMenu />
                    </NativeMenuItem>
                    <NativeMenuItem Header="{x:Static lang:Strings.Tools}">
                        <NativeMenu />
                    </NativeMenuItem>
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="{x:Static lang:Strings.Tools}">
                <NativeMenu />
            </NativeMenuItem>
            <!--  シーン  -->
            <NativeMenuItem Header="{x:Static lang:Strings.Scene}">
                <NativeMenu>
                    <NativeMenuItem Command="{Binding MenuBar.NewScene}" Header="{x:Static lang:Strings.CreateNew}" />
                    <NativeMenuItem Command="{Binding MenuBar.RemoveFromProject}" Header="{x:Static lang:Strings.Remove}" />
                    <NativeMenuItem Command="{Binding MenuBar.ShowSceneSettings}" Header="{x:Static lang:Strings.SceneSettings}" />
                    <!--  要素  -->
                    <NativeMenuItem Header="{x:Static lang:Strings.Element}">
                        <NativeMenu>
                            <NativeMenuItem Command="{Binding MenuBar.AddLayer}" Header="{x:Static lang:Strings.Add}" />
                            <NativeMenuItem Command="{Binding MenuBar.DeleteLayer}" Header="{x:Static lang:Strings.Delete}" />
                            <NativeMenuItem Command="{Binding MenuBar.ExcludeLayer}" Header="{x:Static lang:Strings.Exclude}" />
                            <NativeMenuItem Command="{Binding MenuBar.CutLayer}" Header="{x:Static lang:Strings.Cut}" />
                            <NativeMenuItem Command="{Binding MenuBar.CopyLayer}" Header="{x:Static lang:Strings.Copy}" />
                            <NativeMenuItem Command="{Binding MenuBar.PasteLayer}" Header="{x:Static lang:Strings.Paste}" />
                        </NativeMenu>
                    </NativeMenuItem>
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>
    <local:MainView x:Name="mainView" />
</Window>
