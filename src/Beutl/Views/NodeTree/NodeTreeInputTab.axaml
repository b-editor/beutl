<UserControl x:Class="Beutl.Views.NodeTree.NodeTreeInputTab"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Beutl.Views.NodeTree"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="using:Beutl.ViewModels.NodeTree"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="viewModel:NodeTreeInputTabViewModel"
             mc:Ignorable="d">
    <ScrollViewer x:Name="scrollViewer">
        <ItemsControl x:Name="itemsControl" ItemsSource="{Binding InnerViewModel.Value.Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:NodeInputView />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
